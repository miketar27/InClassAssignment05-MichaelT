<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.miket.inclassassignment05_michaelt.MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Johns"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/username_display"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:id="@+id/new_username" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Username"
        android:onClick="changeUsername"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Player Name:" />

    <EditText
        android:id="@+id/player_name_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type Player Name Here" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Player Number" />

    <EditText
        android:id="@+id/player_number_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type Player Here"
        android:onClick="playerNumber" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Player Note:" />

    <EditText
        android:id="@+id/player_note_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type Note Here"
        android:onClick="playerNote" />

    <Button
        style="@style/Buttons"
        android:onClick="clear_button"
        android:text="Clear" />

    <Button
        style="@style/Buttons"
        android:onClick="savePlayerInfo"
        android:text="Submit Player Information" />

    <Button
        style="@style/Buttons"
        android:onClick="seeRoster"
        android:text="See Roster" />

</LinearLayout>
