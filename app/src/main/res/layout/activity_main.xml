<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.miket.inclassassignment05_michaelt.MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Player Name:"/>

    <EditText
        android:id="@+id/player_name_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type Player Name Here"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Player Number"/>

    <EditText
        android:layout_width="match_parent"
        android:onClick="playerNumber"
        android:layout_height="wrap_content"
        android:hint="Type Player Here"
        android:id="@+id/player_number_edittext"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Player Note:"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="playerNote"
        android:hint="Type Note Here"
        android:id="@+id/player_note_edittext"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:onClick="clear_button"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Player Information"
        android:onClick="savePlayerInfo"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See Roster"
        android:onClick="seeRoster"/>

</LinearLayout>
